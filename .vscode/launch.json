    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run podcast_bot.py in dry run and debug mode",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/podcast_bot.py",
            "args": [
                "--dry-run",
                "--debug"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run podcast_bot in debug mode",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/podcast_bot.py",
            "args": [
                "--debug"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}